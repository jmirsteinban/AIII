@model FrontEnd.Models.UserViewModel
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio de Sesión - LavaCar</title>
    <link href="~/Vendor/bootstrap-4.3.1-dist/css/bootstrap-reboot.css" rel="stylesheet" />
    <link href="~/Vendor/bootstrap-4.3.1-dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Vendor/fresca/template3.css" rel="stylesheet" />
    <link rel="icon" type="image/jpeg" href="~/Resources/logo claro HRN.jpeg" />

    <style>
        * {
            margin: 0;
            box-sizing: border-box;
        }

        body {
            width: 100%;
            height: 100vh;
            overflow: hidden;
            background-color: black;
            background: linear-gradient(black 40%,green);
        }

        #menu {
            background-color: black;
            position: absolute;
            top: 0;
            width: 100%;
        }

        #titulo {
            position: center;
            margin-top: 1.5%;
            left: 6%;
        }

        #saludo {
            position: center;
            margin-top: 1.5%;
            left: 17%;
        }

        .card-login {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-55%,-50%);
            width: 60%;
        }

        .card {
            border-radius: 80px;
        }

        .card-title {
            color: white;
        }

        .lead {
            color: black;
        }

        td {
            color: black;
        }

        td input {
            width: 8em;
        }

        footer {
            text-align: center;
            color: white;
            background-color: black;
            bottom: 0;
            position: absolute;
            width: 100%;
            height: 66px;
        }

        .field-validation-error {
            color: red;
        }
    </style>
</head>
<body>
    <div id="menu" class="row">
        <div class="col-1" style="position:absolute;">
            <a class="navbar-brand" href="#">
                <img src="~/Resources/logo oscuro HRN.jpeg" width="70" height="70">
            </a>
        </div>
        <div id="titulo" class="col-7">
            <h2 class="navbar-brand text-light">Hornos Roberto Navarro</h2>
        </div>
        <div id="saludo" class="col-4" style="padding-top:1em;">
            <center>
                @*<h6 class="card-title">¡Bienvenido al sistema!</h6>*@
            </center>
        </div>
    </div>

    @using (Html.BeginForm("Autherize", "Login", FormMethod.Post))
    {
        <div class="row card-login text-center">
            <div class="col-2"></div>
            <div class="col-10">
                <div class="card bg-light">
                    <div class="card-body">
                        <center>
                            <p class="lead">Introduzca sus credenciales</p>
                            <table>
                                <tr>
                                    <td>
                                        @Html.LabelFor(model => model.UserName)
                                    </td>
                                    <td>
                                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @autoFocus = "true" } })
                                    </td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td>@Html.ValidationMessageFor(model => model.UserName)</td>
                                </tr>

                                <tr>
                                    <td>@Html.LabelFor(model => model.Password)</td>
                                    <td>@Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })</td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td>@Html.ValidationMessageFor(model => model.Password)</td>
                                </tr>
                                <tr>
                                    <td colspan="2">
                                        <label class="field-validation-error">@Html.DisplayFor(model => model.LoginErrorMessage)</label>
                                    </td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td>
                                        <input type="reset" name="name" value="Limpiar" class="btn btn-outline-dark" />
                                        <input type="submit" name="name" value="Iniciar Sesión" class="btn btn-outline-dark" />
                                    </td>
                                </tr>
                            </table>
                        </center>
                    </div>
                    <div class="card-footer text-muted">
                        <p> &copy; @DateTime.Now.Year - Hornos Roberto Navarro </p>
                    </div>
                </div>
            </div>
        </div>
    }

