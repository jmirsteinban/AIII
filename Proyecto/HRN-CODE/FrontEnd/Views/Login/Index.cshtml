@model FrontEnd.Models.UserViewModel
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio de Sesión - LavaCar</title>
    <link href="~/Vendor/bootstrap-4.3.1-dist/css/bootstrap-reboot.css" rel="stylesheet" />
    <link href="~/Vendor/bootstrap-4.3.1-dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Vendor/fresca/template3.css" rel="stylesheet" />

    <style>
        body{
            margin:0;
        }

        #menu {
            background-color: black;
            margin-top: -56px;
            width: 100%;
        }

        footer {
            text-align: center;
            color: white;
            background-color:black;
            bottom:0;
            position:absolute;
            width:100%;
            height:66px;
        }

        .field-validation-error {
            color: red;
        }
    </style>
</head>
<body>
    <div id="menu" class="container-fluid">
        <nav class="navbar navbar-expand-lg" style="margin-bottom:0.4in;">
            <a class="navbar-brand" href="frmChildHome.aspx">
                <img src="~/Resources/logo oscuro HRN.jpeg" width="50" height="40" class="d-inline-block align-top" style="margin-right:20px;" alt="">
            </a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="row">
                    <div class="navbar-nav col-2">
                        @Html.ActionLink("Hornos Roberto Navarro", "Index", "Login", new { area = "" }, new { @class = "text-light navbar-brand" })
                    </div>
                    <div class="col-3">
                        <span style="margin-left:3in;" class="text-light navbar-brand">¡Bienvenido al sistema de Hornos Roberto Navarro!</span>
                    </div>
                </div>
            </div>
        </nav>
    </div>

    <div>
        @using (Html.BeginForm("Autherize", "Login", FormMethod.Post))
        {
            <div class="row">
                <div class="col-2"></div>
                <div class="col-8">
                    <div class="jumbotron bg-light border border-secondary rounded-pill">
                        <div class="row">
                            <div class="col-4"></div>
                            <!--<div class="col-2">
        <img src="~/Resources/logo claro HRN.jpeg" width="100%" height="80%" class="d-inline-block align-top" alt="">
    </div>-->
                            <div class="col-4">
                                <h1>Inicio de Sesión</h1>
                                <p class="lead">Introduzca sus credenciales</p>
                            </div>
                            <div class="col-4"></div>
                        </div>
                        <div class="row">
                            <div class="col-4"></div>
                            <div class="col-6 form-group">
                                <table>
                                    <tr>
                                        <td>
                                            @Html.LabelFor(model => model.UserName)
                                        </td>
                                        <td>
                                            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                                        </td>
                                    </tr>
                                    <tr>
                                        <td></td>
                                        <td>@Html.ValidationMessageFor(model => model.UserName)</td>
                                    </tr>

                                    <tr>
                                        <td>@Html.LabelFor(model => model.Password)</td>
                                        <td>@Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })</td>
                                    </tr>
                                    <tr>
                                        <td></td>
                                        <td>@Html.ValidationMessageFor(model => model.Password)</td>
                                    </tr>
                                    <tr>
                                        <td colspan="2">
                                            <label class="field-validation-error">@Html.DisplayFor(model => model.LoginErrorMessage)</label>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td></td>
                                        <td>
                                            <input type="reset" name="name" value="Limpiar" class="btn btn-success" />
                                            <input type="submit" name="name" value="Iniciar Sesión" class="btn btn-success" />
                                        </td>
                                    </tr>
                                    <tr style="margin-top:10px;">
                                        <td></td>
                                        <td style="text-align:center"><a href="#" style="color:forestgreen;">¿No tienes cuenta aún?</a></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-2"></div>
            </div>
        }

    </div>

    <footer>
        <div class="row">
            <div class="col-4"></div>
            <div class="col-4 ">
                <p> &copy; @DateTime.Now.Year - Hornos Roberto Navarro </p>
            </div>
            <div class="col-4"></div>
        </div>
    </footer>

</body>
</html>



