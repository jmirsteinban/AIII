        </div>
        <div class="row">
            <div class="col-1"></div>
            <div class="col-4">
                @Html.EditorFor(model => model.cedula_user, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cedula_user, "", new { @class = "text-danger" })
            </div>
            <div class="col-2"></div>
            <div class="col-4">
                @Html.EditorFor(model => model.primer_nombre_user, new { htmlAttributes = new { @class = "form-control" } })
