@model FrontEnd.Models.ClientsViewModel

@{
    ViewBag.Title = "Borrar";
}

<div class="row">
    <div class="col-12 text-center">
        <h2>Borrar Cliente</h2>
        <hr class="hrn-hr" />
    </div>
</div>

<div>
    <br />
    <div class="row">
        <div class="col-1"></div>
        <div class="table-responsive col-10">
            <table  class="table table-light table-striped">@*id="tblBorrar"*@
                <thead class="bg-danger">
                    <tr>
                        <th scope="col">
                            <font color="white">@Html.DisplayNameFor(model => model.cedula_cliente)</font>
                        </th>
                        <th scope="col">
                            <font color="white">Nombre Completo</font>
                        </th>
                        <th>
                            <font color="white">@Html.DisplayNameFor(model => model.correo_electronico_cliente)</font>
                        </th>
                        <th>
                            <font color="white">@Html.DisplayNameFor(model => model.estado_cliente)</font>
                        </th>
                        <th>
                            <font color="white">@Html.DisplayNameFor(model => model.telefono)</font>
                        </th>
                        <th>
                            <font color="white">@Html.DisplayNameFor(model => model.direccion)</font>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(model => model.cedula_cliente)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.primer_nombre_cliente) @Html.DisplayFor(model => model.segundo_nombre_cliente)
                            @Html.DisplayFor(model => model.primer_apellido_cliente) @Html.DisplayFor(model => model.segundo_apellido_cliente)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.correo_electronico_cliente)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.estado_cliente)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.telefono)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.direccion)
                        </td>
                    </tr>
                </tbody>
            </table>
            <br />
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.clientID)
                @Html.HiddenFor(model => model.direccionID)
                @Html.HiddenFor(model => model.telefonoID)
                <!-- Modal -->
                <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLongTitle">ELIMINAR</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                ¿Está seguro de borrar este cliente?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                                <input type="submit" value="Confirmar" class="btn btn-primary" style="width:120px;" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row form-actions no-color">
                    <div class="col-3"></div>
                    <div class="col-3">
                        <center>
                            <a href="~/Clients/Index" class="btn btn-pill btn-success btn-md" style="color:white !important; width:100%;">Volver a la Lista</a>
                        </center>
                    </div>
                    <div class="col-3">
                        <center>
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-pill btn-danger" style="width:100%;" data-toggle="modal" data-target="#exampleModalCenter">
                                Borrar
                            </button>
                        </center>
                    </div>
                    <div class="col-2"></div>
                </div>
            }
        </div>
    </div>
</div>
        @section Scripts{
            <script>
                $(document).ready(function () {
                    $('#tblBorrar').DataTable({
                        dom: ''
                    }
                    );
                });

            </script>


        }

