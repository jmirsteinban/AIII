@model FrontEnd.Models.ProductsViewModel

@{
    ViewBag.Title = "Detalles de Producto";
}


<div class="row">
    <div class="col-12 text-center">
        <h2>Detalles de Producto</h2>
        <hr class="hrn-hr" />
    </div>
</div>


<div class="row">
    <div class="col-1"></div>
    <div class="table-responsive col-10">
        <table id="tblDetalle" class="table table-striped">
            <thead class="bg-primary">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.codigo_producto)</th>
                    <th>@Html.DisplayNameFor(model => model.nombre_producto)</th>
                    <th>@Html.DisplayNameFor(model => model.descripcion)</th>
                    <th>@Html.DisplayNameFor(model => model.cantidad)</th>
                    <th>@Html.DisplayNameFor(model => model.precio_manufactura)</th>
                    <th>@Html.DisplayNameFor(model => model.precio_venta)</th>
                    <th>@Html.DisplayNameFor(model => model.estado_producto)</th>
                    <th>@Html.DisplayNameFor(model => model.porcentaje_ganancia)</th>
                    <th>@Html.DisplayNameFor(model => model.porcentaje_descuento)</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Html.DisplayFor(model => model.codigo_producto)</td>
                    <td>@Html.DisplayFor(model => model.nombre_producto)</td>
                    <td>@Html.DisplayFor(model => model.descripcion)</td>
                    <td>@Html.DisplayFor(model => model.cantidad)</td>
                    <td>₡@Html.DisplayFor(model => model.precio_manufactura)</td>
                    <td>₡@Html.DisplayFor(model => model.precio_venta)</td>
                    <td>@Html.DisplayFor(model => model.estado_producto)</td>
                    <td>@Html.DisplayFor(model => model.porcentaje_ganancia)</td>
                    <td>@Html.DisplayFor(model => model.porcentaje_descuento)</td>
                </tr>
            </tbody>
        </table>
        <br />
        <p>
            <a href="~/Products/Index" class="btn btn-pill btn-success btn-md" style="color:white !important">Volver a la Lista</a>
            <button class="btn btn-pill btn-outline-dark" style="width:120px;"> @Html.ActionLink("Editar", "Edit", new { id = Model.productID })</button>
        </p>
    </div>
</div>





@section Scripts{
    <script>
        $(document).ready(function () {
            $('#tblDetalle').DataTable({
                dom: 'B',
                buttons: [
                    {
                        extend: 'copy',
                        text: 'Copiar',
                        exportOptions: {
                            columns: ':not(.notexport)'
                        },
                    },
                    {
                        extend: 'excel',
                        text: 'Excel',
                        exportOptions: {
                            columns: ':not(.notexport)'
                        },
                    },
                    {
                        extend: 'pdf',
                        text: 'Pdf',
                        exportOptions: {
                            columns: ':not(.notexport)'
                        },
                    }
                ],
                "language": { "url": "../../Vendor/DataTables/Spanish.json" }
            });
        });

    </script>


}
